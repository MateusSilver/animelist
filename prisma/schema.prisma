generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  id       String   @id @default(cuid())
  name     String
  seasons  String
  type     String
  studio   String
  sinopsis String
  autor    String
  coverURL String
  Review   Review[]
}

model User {
  id     String   @id @default(uuid())
  name   String
  Review Review[]
}

model Review {
  id       String  @id @default(uuid())
  nota     Int
  coment   String
  status   String
  markbook Boolean
  animeID  String
  anime    Anime   @relation(fields: [animeID], references: [id])
  userID   String
  user     User    @relation(fields: [userID], references: [id])
}
